{% extends 'admin.base.html.twig' %}

{% block body %}
    <h1>Attributes list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attribute in attributes %}
            <tr>
                <td><a href="{{ path('attribute_edit', { 'id': attribute.id }) }}">{{ attribute.id }}</a></td>
                <td>{{ attribute.type.name }}</td>
                <td>{{ attribute.value }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('attribute_edit', { 'id': attribute.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('attribute_new') }}">Create a new attribute</a>
        </li>
    </ul>
{% endblock %}
